<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/bt_status_monitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connecting to..."
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_message_monitor"
            android:layout_width="match_parent"
            android:text=">_"
            android:layout_height="200dp"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="#000050"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" >

            <EditText
                android:id="@+id/et_message_to_send"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Enter message to send here..."
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:backgroundTint="#4CAF50"/>

            <ImageButton
                android:id="@+id/btn_send_message"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/send_button_icon" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
                android:id="@+id/btn_list_paired_devices"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:background="#4CAF50"
                android:text="List Paired Devices" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_paired_bt_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" />

        <Button
            android:id="@+id/btn_goto_bt_settings"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#4CAF50"
            android:text="Pair New Devices"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>