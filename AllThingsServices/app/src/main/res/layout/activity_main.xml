<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/BTN_foreground_service"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Foreground Service"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#42bcf5"/>

        <Button
            android:id="@+id/BTN_background_service"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Background Service"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#42bcf5" />

        <Button
            android:id="@+id/BTN_bound_service"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Bound Service"
            android:backgroundTint="#42bcf5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>